<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/private-offers-posting-system</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">admin</property>

        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.default_schema">public</property>

        <property name="show_sql">true</property>


        <mapping class="org.senla.woodygray.model.User"/>
        <mapping class="org.senla.woodygray.model.Role"/>
        <mapping class="org.senla.woodygray.model.Offer"/>
        <mapping class="org.senla.woodygray.model.OfferStatus"/>
        <mapping class="org.senla.woodygray.model.Comment"/>
        <mapping class="org.senla.woodygray.model.Photo"/>
        <mapping class="org.senla.woodygray.model.Review"/>
        <mapping class="org.senla.woodygray.model.ChatMessage"/>
    </session-factory>
</hibernate-configuration>
