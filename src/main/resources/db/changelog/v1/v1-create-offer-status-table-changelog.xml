<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-3" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="offer_status"/>
            </not>
        </preConditions>
        <createTable tableName="offer_status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="status_name" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-3.1" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="offer_status"/>
        </preConditions>
        <loadData tableName="offer_status" file="db/data/offer-status-data.csv"/>
    </changeSet>
</databaseChangeLog>