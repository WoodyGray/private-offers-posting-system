<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-8" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chat_message"/>
            </not>
        </preConditions>
        <createTable tableName="chat_message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_opponent" type="bigint">
                <constraints nullable="false" foreignKeyName="chat_opponent" references="public.user(id)"/>
            </column>
            <column name="id_sender" type="bigint">
                <constraints nullable="false" foreignKeyName="chat_sender" references="public.user(id)"/>
            </column>
            <column name="message_text" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="sent_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-8.1" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="chat_message"/>
        </preConditions>
        <loadData tableName="chat_message" file="db/data/chat-message-data.csv"/>
    </changeSet>
</databaseChangeLog>