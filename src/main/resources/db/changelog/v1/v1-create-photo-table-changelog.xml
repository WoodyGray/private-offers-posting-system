<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-5" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="photo"/>
            </not>
        </preConditions>
        <createTable tableName="photo">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_offer" type="bigint">
                <constraints nullable="false" foreignKeyName="photo_offer" references="offer(id)"/>
            </column>
            <column name="file_path" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-5.1" author="Woody Gray">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="photo"/>
        </preConditions>
        <loadData tableName="photo" file="db/data/photo-data.csv"/>
    </changeSet>
</databaseChangeLog>